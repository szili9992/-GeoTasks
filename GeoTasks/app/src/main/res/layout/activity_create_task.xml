<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.CreateTaskActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task name"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>


    <!--<EditText-->
        <!--android:id="@+id/taskName"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="Task name"-->
        <!--android:singleLine="true" />-->



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geofence radius:"
        android:layout_marginTop="10dp"
        />

    <!--<android.support.v7.widget.AppCompatSeekBar-->
        <!--android:id="@+id/geofenceRadiusSeek"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:max="1000"-->
        <!--android:progress="100"/>-->

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/seekBar"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dsb_indicatorElevation="0dp"
        app:dsb_min="0"
        app:dsb_max="1000"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose location"
        android:onClick="chooseDestination"
        android:background="@color/cast_intro_overlay_button_background_color"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Done"
        android:onClick="addTask"/>
    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="longitude"/>
    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="latitude"/>

    <TextView
        android:id="@+id/intervalStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="interval start"/>
    <TextView
        android:id="@+id/intervalEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="interval end"/>
    <TextView
        android:id="@+id/geofenceRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="geofenceradius"/>
    <TextView
        android:id="@+id/destinationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="destinationName"/>


</LinearLayout>
